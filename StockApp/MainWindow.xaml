        <TextBox x:Name="txtPrice" TextWrapping="Wrap" Text="TextBox" Margin="125,145,442,251"/>
        <TextBox x:Name="txtQuantity" TextWrapping="Wrap" Text="TextBox" Margin="125,197,442,199"/>
        <Label Content="Quantity" Margin="43,197,679,196"/>
        <Label Content="Price" Margin="43,145,679,248"/>
        <Label Content="Name" Margin="43,50,679,343"/>
        <Label Content="Description" Margin="43,95,679,298"/>
